import java.util.Scanner;


public class C {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		String[] gw = {"","I","II","III","IV","V","VI","VII","IIX","IX"};
		String[] sw = {"","X","XX","XXX","XL","L","LX","LXX","XXC","XC"};
		String[] bw = {"","C","CC","CCC","CD","D","DC","DCC","CCM","CM"};
		String[] qw = {"","M","MM","MMM"};
		int a,b;
		String sc;
		Scanner cin = new Scanner(System.in);
		a = cin.nextInt();
		b = cin.nextInt();
		//cin.next();
        sc = cin.next();
		if(b != 'R'){
			System.out.println(Integer.toString(Integer.valueOf(sc), b).toUpperCase());
		}
		else {
		//System.out.println("a + b + c :"+a+" "+b+" "+c);
			int c;
			c = Integer.valueOf(sc);
		StringBuffer ans = new StringBuffer();
		ans.append(qw[c/1000]);c%=1000;
		ans.append(bw[c/100]);c%=100;
		ans.append(sw[c/10]);c%=10;
		ans.append(gw[c]);
		String sb;
		sb = Integer.toString(b);
		while(ans.indexOf(sb)!=-1)
		{
			ans.replace(ans.indexOf(sb), ans.indexOf(sb)+1, "R");
		}
		String s = new String(ans);
		//s = s.toUpperCase();
		System.out.println(s.toUpperCase());
	}
	}
}
